<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        app:placeholderImage="@mipmap/zhan"
        app:placeholderImageScaleType="fitCenter"
        app:progressBarImage="@mipmap/loadding"
        app:progressBarAutoRotateInterval="5000"
        app:progressBarImageScaleType="fitCenter"
        app:actualImageScaleType="fitCenter"
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:failureImage="@mipmap/faile"
        app:failureImageScaleType="fitCenter"
        />
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25dp"
            android:text="事件"
            android:gravity="center_vertical"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:id="@+id/name"
            android:text="名字"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />
    </LinearLayout>
</LinearLayout>
